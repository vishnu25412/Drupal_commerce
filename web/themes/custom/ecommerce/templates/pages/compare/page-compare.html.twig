{% set theme_path = base_path ~ directory %}
<div class="container pt-5 compare-overflow">
    <div class="d-flex justify-content-end">
        <a class="tb-fs-20 primary-500" href="/compare-vehicle">Compare again</a>
    </div>
    <section class="d-flex justify-content-between gap-3 compare-main">
      {% for arr_node in arr_nodes %}

        <div class="product-details compare--list mb-5">
            <div class="compare--product compare--product--1">
                <div class="image">
                    <img src="{{ file_url(arr_node.node.field_bus_finder.entity.uri.value) }}" alt="Image Alt Text" />
                </div>
                <div class="col tb-fs-16">
                    {{ arr_node.node.field_bus_.entity.name.value }}
                </div>
                <div class="col font-bold tb-fs-20">
                    {{ arr_node.node.title.value | raw }}
                </div>
                <div class="mt-3 view-details">
                    <a class="btn tb-btn-secondary rounded-0" href="{{ arr_node.path }}">View Details</a>
                    <a  href="javascript:void" class="close compare_close btn tb-btn-secondary rounded-0" data-prodID="{{ arr_node.node.nid.value }}" data-catID="{{ arr_node.node.field_bus_.target_id }}" data-appID="{{ arr_node.node.field_applications.target_id }}">Cancel</a>
                </div>
            </div>
        </div>
      {% endfor %}
    </section>
    {% include directory ~ "/templates/pages/compare/cfeatures.html.twig" ignore missing %}
</div>